{
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      modules: true,
    },
  },
  "env": {
    "es6": true,
    "browser": 0,
    "node": 1,
    "jasmine": 1
  },
  "globals": {},
  "extends": "google",
  "rules": {
    "indent": 0,
    "no-undef": "error",
    "no-invalid-this": 0,
    "max-nested-callbacks": 0,
    "no-console": 0,
    "comma-dangle": 0,
    "func-names": 0,
    "wrap-iife": 0,
    "semi": "error",
    "padded-blocks": 0,
    "spaced-comment": 0,
    "valid-jsdoc": 0,
    "require-jsdoc": 0,
    "arrow-parens": ["error", "always"],
    "space-before-blocks": ["error", {
      "functions": "always",
      "keywords": "always",
      "classes": "always"
    }],
    "one-var": ["error", {
        "var": "always",
        "let": "never",
        "const": "never"
    }],
    "brace-style": ["error", "stroustrup", { "allowSingleLine": true }],
    "object-curly-spacing": ["error", "always"],
    "quotes": ["error", "single"],
    "quote-props": ["error", "as-needed"],
    "no-debugger": "error"
  }
}
